Auto:AddToggle({
	Name = "Auto T∆∞·ªõi C√¢y",
	Default = false,
	Callback = function(Value)
		_G.autoWater = Value
		while _G.autoWater do
			task.wait(1)
			for _,v in pairs(game:GetService("Workspace").Plants:GetDescendants()) do
				if v:IsA("ProximityPrompt") and v.Name == "Water" then
					fireproximityprompt(v)
				end
			end
		end
	end
})

